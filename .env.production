# Production Environment Variables for Render
# Copy these to your Render dashboard as environment variables

# Core Configuration
SECRET_KEY=your-production-secret-key-here
DEBUG=false
FLASK_ENV=production

# Security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Database (SQLite works on Render free tier)
# DATABASE_URL will be set automatically if using Render's database

# OpenRouter API (for LLM functionality)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct:free
OPENROUTER_DAILY_LIMIT=50

# Admin Access
ADMIN_PASSWORD=your-secure-admin-password-here

# Rate Limiting
API_RATE_LIMIT=100 per hour

# Logging
LOG_LEVEL=INFO